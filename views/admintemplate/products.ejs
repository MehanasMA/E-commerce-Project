  <div class="container mt-5">
      <div class=" ml-auto">
      <a href="/product/addproduct" class="btn btn-primary text-uppercase ml-auto  mt-3">Add new product</a>
      </div>
    <div class="row tm-content-row mt-3">
      <div class="col-sm-12 col-md-12 col-lg-10 col-xl-10 tm-block-col">
        <div class="tm-bg-primary-dark tm-block tm-block-products">
          <div class="tm-product-table-container">

            <table class="table table-hover tm-table-small tm-product-table">
              <thead>
                <tr>
                  <th scope="col">&nbsp;</th>
                  <th scope="col">PRODUCT NAME</th>
                  <th scope="col">PRODUCT DESCRIPTION</th>
                  <th scope="col">CATEGORY</th>
                  <th scope="col">STOCK</th>
                  <th scope="col">PRICE</th>
                  <th scope="col">IMAGE</th>
                  <th scope="col">EDIT</th>
                  <th scope="col">DELETE</th>
                  <th scope="col">&nbsp;</th>
                </tr>

              </thead>
              <tbody>
                <% let j=1; for(datas of product){ %>
                  <tr>
                    <th scope="row">
                      <%= j %>
                    </th>
                    <td>
                      <%= datas.product_name %>
                    </td>

                    <!-- <td><button type="button" class="btn btn-primary  mx-2"><a href='/product/deleteProduct/<%=datas.id%>?_method=PUT' method="post" onclick=" return confirm('Are u sure want to delete <%= datas.product_name%>')">Delete </a></button></td> -->
                    <!-- 
                      <form
                      action="/product/deleteProduct/<%= datas._id %>?_method=DELETE"
                      method="post"
                      >
                      <button class="btn btn-danger" id="edit">Delete</button>
                    </form> -->
                    <td><%=datas.product_name%></td>
                    <td><%=datas.product_description%></td>
                    <td><%= datas.stock %></td>
                    <td><%= datas.product_price %></td>
                    <td><img style="width: 50px;height: 50px;"  src="<%=datas.image[0].url%>"></td>
                    
                      <td><button type="button" class="btn btn-primary  mx-2"><a
                            href='/product/editproduct/<%=datas._id%>'> Edit </a></button></td>
                      <td>
                        <form action="/product/deleteProduct/<%= datas._id %>?_method=PUT" method="post"><button
                            class="btn btn-primary" type="submit"
                            onclick="return confirm('Do you want to delete <%= datas.product_name%>?')">Remove</button>
                        </form>
                      </td>
                      <%j++ } %>

              </tbody>
            </table>
          </div>
          <!-- table container -->
          <a href="/brand/addbrand" class="btn btn-primary btn-block text-uppercase">
            Product Brands
          </a>
        </div>
      </div>
      <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 tm-block-col">
        <div class="tm-bg-primary-dark tm-block tm-block-product-categories">
          <h2 class="tm-block-title">Product Categories</h2>
          <div class="tm-product-table-container">
            <table class="table tm-table-small tm-product-table">
              <tbody>

                <% let i=1; for(let datas of categorys) {%>
                  <tr>
                    <th scope="row">
                      <%= i %>
                    </th>
                    <td>
                      <%= datas.category %>
                    </td>
                    <td>

                      <!-- <button class="btn btn-secondary"> delete</button> -->
                      <form action="/category/deleteCategory/<%= datas._id %>?_method=PUT" method="post"><button
                          class="btn btn-primary" type="submit"
                          onclick="return confirm('Do you want to delete <%= datas.category%>?')">Remove</button>
                      </form>
                    </td>
                  </tr>
                  <% i++ } %>



              </tbody>
            </table>
          </div>

           <!-- table container -->
          <form action="/category/addcategory" method="post">
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">

            Add new category
          </button>
        </div>
      </div>
